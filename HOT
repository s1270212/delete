public void HOT(){
	System.out.println("Tossing a coin...");
	for(int i=1;i<4;i++){
  	x=rnd.nextInt(2);
    if(x==0){
    	System.out.println("Round "+i+": Heads");
    	cnt0++;
  	}else if(x==1){
    	System.out.println("Round "+i+": Tails");
    	cnt1++;
  	}
 	}
	System.out.println("Heads: "+cnt0+", Tails: "+cnt1);
}
